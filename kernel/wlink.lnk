option quiet
system nt
output OS90.DAT

# Align the start of the binary to 1024 bytes
option offset=0x80000000

# Define the segments with 1024-byte alignment
segment _TEXT USE32 CLASS 'CODE' align=1024
segment _DATA USE32 CLASS 'DATA' align=1024
segment _BSS  USE32 CLASS 'BSS'  align=1024

# Define symbols pointing to the BSS section
symbol _bss_start =_BSS:start
symbol _bss_end   =_BSS:end
